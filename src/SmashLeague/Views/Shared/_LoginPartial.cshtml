@using SmashLeague.Authentication.Battlenet

@if (User.Identity.IsAuthenticated)
{
    <form asp-controller="Auth" asp-action="SignOut" method="post">
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@User.GetBattletag() <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><button class="navbar-link btn-link" type="submit">Sign Out</button></li>
          </ul>
        </li>
      </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
      <li><a asp-controller="Auth" asp-action="SignIn">Sign In</a></li>
    </ul>
}