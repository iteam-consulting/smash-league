@*
    /auth/login
*@
@{
    Layout = null;
}

<div class="content content-home">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <section class="panel panel-blue">
        <header class="panel-heading">
          <h1><span class="fa fa-lock"></span> Log in</h1>
        </header>
        <main class="panel-body">
          <p class="help-block text-subtle">
            Choose from the following authentication providers to login (unregistered users will be prompted to register).
          </p>
          <br />
          <ul class="nav">
            <li><button class="btn navbar-btn btn-lg btn-auth btn-auth-bnet text-uppercase" ng-click="SignIn('battlenet')">Battle.net</button></li>
            <li><button class="btn navbar-btn btn-lg btn-auth btn-auth-twitch" disabled>Twitch</button></li>
          </ul>
        </main>
      </section>
    </div>
</div>
