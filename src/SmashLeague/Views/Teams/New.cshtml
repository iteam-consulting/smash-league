@*
    /teams/new
*@
@{
    Layout = null;
}

<div class="content content-home">
  <form class="container form" novalidate>
    <div class="row">

      <div class="col-md-6">
        <section class="panel panel-team">
          <header class="panel-heading">
            Captain
          </header>
          <main class="panel-body">
            <roster-player ng-model="Captain"></roster-player>
          </main>
        </section>
      </div>

      <div class="col-md-6">
        <section class="panel panel-team">
          <header class="panel-heading">
            Team Name
          </header>
          <main class="panel-body form-group">
            <p class="help-block text-subtle"><strong>/#/teams/</strong>{{(Name && Name.toLowerCase().split(' ').join('-')) || 'team-name'}}</p>
            <input class="form-control" id="name" type="text" placeholder="Team Name" ng-model="Name" required />            
          </main>
        </section>
      </div>

    </div>

    <div class="row">
      <div class="col-md-12">
        <section class="panel panel-team">
          <header class="panel-heading">
            Build your Roster
          </header>
          <main class="panel-body" id="build-your-roster">
            <div class="row">
              <div class="col-md-6">
                <h4>Roster</h4>
                <p class="help-block text-subtle">You must add <strong>4</strong> more players.</p>
                <div class="form-group">
                  <div class="input-group">
                    <input class="form-control" placeholder="Player username" type="text" />
                    <span class="input-group-btn">
                      <button class="btn btn-success" disabled><span class="fa fa-plus"></span> Player</button>
                    </span>
                  </div>
                  <p class="help-block text-subtle">If the player you want to add hasn't registered with SmashLeague, <a href="">invite them to the league!</a>.</p>
                </div>
              </div>
              <div class="col-md-6">
                <h4>Suggestions</h4>
                <p class="help-block text-subtle">If available, <strong>player</strong> suggestions will be provided here.</p>
                <div class="well well-sm well-players" ng-controller="PlayersController">
                  <roster-player ng-model="player" ng-repeat="player in Service.Suggestions | unselected:[Captain,Member1,Member2,Member3,Member4]" ng-if="player" data-drag="true" jqyoui-draggable="{placeholder:'keep'}" data-jqyoui-options="{appendTo:'#build-your-roster', helper:'clone', revert:'invalid', cursor:'-webkit-grabbing'}">
                  </roster-player>
                  <p class="help-block text-center text-subtle" ng-if="!Service.Suggestions | !Service.Suggestions.length">No suggestions found</p>
                </div>
              </div>
            </div>
            <div class="form-group">
              <button class="btn btn-success" disabled><span class="fa fa-plus"></span> Create Team</button>
            </div>
          </main>
        </section>
      </div>
    </div>
  </form>
</div>