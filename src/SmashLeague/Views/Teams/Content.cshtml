
@{
    Layout = null;
}

<div class="content content-home">
  <div class="container">
    <section class="panel panel-team">
      <header class="panel-heading">
        <h2><span class="fa fa-star text-legendary"></span> Top Teams</h2>
      </header>
      <main class="panel-body">
        <team-listing ng-repeat="team in TopTeams" ng-model="team"></team-listing>
        <p class="help-block" ng-if="!TopTeams || !TopTeams.length">No top teams found <span class="fa fa-frown-o"></span></p>
      </main>
    </section>
  </div>
</div>